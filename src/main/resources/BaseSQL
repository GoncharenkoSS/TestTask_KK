CREATE TABLE workers
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    name VARCHAR(255),
    position VARCHAR(255),
    avatar TEXT
);

CREATE TABLE tasks
(
    id INT GENERATED BY DEFAULT AS IDENTITY PRIMARY KEY,
    title VARCHAR(255),
    description TEXT,
    time VARCHAR(255),
    status VARCHAR(255),
    performer int REFERENCES workers(id) ON DELETE SET NULL
);

